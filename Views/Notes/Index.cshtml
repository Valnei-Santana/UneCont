@{
    ViewData["Title"] = "Lista de Notas";
}
<div class="container mt-5">
    <div class="w-full card__tables bg-light">
        <div class="title">@ViewData["Title"]</div>
        <table id="notesTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nº</th>
                    <th>Nome do pagador</th>
                    <th>Data de emissão</th>
                    <th>Data da cobrança</th>
                    <th>Data do pagamento</th>
                    <th>Valor</th>
                    <th>Status</th>
                    <th>NF</th>
                    <th>Boleto</th>
                </tr>
                <tr>
                    <th>--</th>
                    <th>--</th>
                    <th><input type="date" id="issueDateFilter" class="form-control"></th>
                    <th><input type="date" id="billingDateFilter" class="form-control"></th>
                    <th><input type="date" id="paymentDateFilter" class="form-control"></th>
                    <th>--</th>
                    <th>
                        <select id="statusFilter" class="form-select">
                            <option value="-1">Todos</option>
                            <option value="0">Emitidas</option>
                            <option value="1">Cobrança realizada</option>
                            <option value="2">Pagamento em atraso</option>
                            <option value="3">Pagamento realizado</option>
                        </select>
                    </th>
                    <th>--</th>
                    <th>--</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
</div>
@section Scripts {
    <script src="~/js/notes/notes.js"></script>
}